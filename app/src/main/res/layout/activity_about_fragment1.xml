<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutFragment1">

    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT APLICATION"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="24dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_below="@+id/txtJudul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/image1" />
    <TextView
        android:id="@+id/txtinfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi untuk mengetahui lokasi kita dengan memggunakan sensor GPS"
        android:layout_below="@+id/logo"
        android:textSize="20sp"
        android:textAlignment="textStart"/>
    <TextView
        android:id="@+id/txtinfo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dan Aplikasi ini juga menunjukan 5 favorit makan saya"
        android:layout_below="@+id/txtinfo1"
        android:textSize="20sp"
        android:textAlignment="textStart"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="149dp"
        android:text="Swipe -->"
        android:textAlignment="center"
        android:textSize="20sp" />
</RelativeLayout>